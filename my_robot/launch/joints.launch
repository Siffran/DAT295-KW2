<launch>
  <arg name="model" default="$(find my_robot)/urdf/my_robot.urdf.xacro"/>

  <include file="$(find my_robot)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <rosparam command="load"
            file="$(find my_robot)/config/joints.yaml"
            ns="my_robot_joint_state_controller" />

  <node name="my_robot_controller_spawner" pkg="controller_manager" type="spawner"
    args="my_robot_y_state_controller
          --shutdown-timeout 3"/>
</launch>
